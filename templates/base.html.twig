<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Upload Playlist!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <h2>Upload Playlist</h2>

            <div>
                <form method="POST" action="{{ path('upload_playlist') }}" enctype="multipart/form-data">
                    <label for="name">Playlist Name</label>
                    <input type="text" name="name">
                <br/>
                    <label for="type">Playlist Type</label>
                    <select name="type">
                        <option value="">Select a playlist type</option>
                        {% for type in types %}
                        <option value="{{ type }}">{{ type }}</option>
                        {% endfor %}
                    </select>
                <br/>
                    <input type="file" name="playlist">
                <br/>
                    <button type="submit">Upload</button>
                </form>
            </div>
        {% endblock %}
    </body>
</html>
